{{#> layouts/default}}
    <div class="page">
        <header class="page__header">
          {{> partials/navbar color="white" }}
        </header>
        <article class="page__content offering">
            <div class="offering__primary">
                <div class="offering__primary__hero" style="background-image: url({{ hero_img }});">
                    <div class="offering__primary__hero__overlay"></div>
                </div>
                {{#if video_url}}
                <a href="{{ video_url }}" target="_blank" rel="noopener noreferrer" class="offering__primary__watch--large">
                    <span class="offering__primary__watch__text">Watch video</span>
                </a>
                {{else}}
                <div class="offering__primary__watch--large --placeholder"></div>
                {{/if}}
                <div class="common__centered">
                    <div class="offering__primary__about">
                        <div class="offering__primary__content">
                            <div class="offering__primary__logo" style="background-color: {{logo_bg}};">
                                <img class="offering__primary__logo__img" src="{{ logo_img }}" />
                            </div>
                            <h1 class="offering__primary__title">{{ title }}</h1>
                            <ul class="offering__primary__tags">
                                {{#each tags}}
                                <li class="offering__primary__tags__item">{{ this }}</li>
                                {{/each}}
                            </ul>
                            {{#if video_url}}
                            <a href="{{ video_url }}" target="_blank" rel="noopener noreferrer" class="offering__primary__watch--small">Watch video</a>
                            {{else}}
                            <div class="offering__primary__watch--small --placeholder"></div>
                            {{/if}}
                            <p class="offering__primary__excerpt">{{ excerpt }}</p>
                        </div>
                        <div class="offering__primary__sidebar">
                            {{#if investment_active}}
                            <a href="{{ url }}/invest" class="offering__primary__invest common__button">Invest now</a>
                            {{else}}
                            <div class="offering__primary__invest --placeholder"></div>
                            {{/if}}
                            <h2 class="offering__primary__investment">
                                <span class="offering__primary__investment__commited">{{ investment_commited_formatted }}</span> commited of {{ investment_goal_formatted }} goal
                            </h2>
                            <div class="offering__primary__investment-progress">
                                <div class="offering__primary__investment-progress-finished" style="width: {{ investment_progress }}%;"></div>
                            </div>
                            <ul class="offering__primary__investment-features">
                                <li class="offering__primary__investment-features__item">
                                    <h3 class="offering__primary__investment-features__item__title">From</h3>
                                    <p class="offering__primary__investment-features__item__value">{{ investment_participants }} investors</p>
                                </li>
                                {{#if investment_deadline_left_formatted}}
                                <li class="offering__primary__investment-features__item">
                                    {{#if investment_active}}
                                    <h3 class="offering__primary__investment-features__item__title">Time Left</h3>
                                    {{else}}
                                    <h3 class="offering__primary__investment-features__item__title">Finished</h3>
                                    {{/if}}
                                    <p class="offering__primary__investment-features__item__value">{{ investment_deadline_left_formatted }}</p>
                                </li>
                                {{/if}}
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
            <section class="offering__terms common__centered">
                <h2 class="offering__title-2">Deal Terms</h2>
                <ul class="offering__terms__list">
                    <li class="offering__terms__list__item">
                        <h3 class="offering__terms__list__item__title">Valuation</h3>
                        <p class="offering__terms__list__item__value">{{ deal_valuation_formatted }}</p>
                    </li>
                    <li class="offering__terms__list__item">
                        <h3 class="offering__terms__list__item__title">Funding Round</h3>
                        <p class="offering__terms__list__item__value">{{ deal_round }}</p>
                    </li>
                    <li class="offering__terms__list__item">
                        <h3 class="offering__terms__list__item__title">Minimum Investment</h3>
                        <p class="offering__terms__list__item__value">{{ deal_min_investment_formatted }}</p>
                    </li>
                    <li class="offering__terms__list__item">
                        <h3 class="offering__terms__list__item__title">Type of Security</h3>
                        <p class="offering__terms__list__item__value">{{ deal_security_type }}</p>
                    </li>
                    <li class="offering__terms__list__item">
                        <h3 class="offering__terms__list__item__title">Offered Equity</h3>
                        <p class="offering__terms__list__item__value">{{ deal_equity_formatted }}</p>
                    </li>
                    <li class="offering__terms__list__item">
                        <h3 class="offering__terms__list__item__title">Round Size</h3>
                        <p class="offering__terms__list__item__value">{{ investment_goal_formatted }}</p>
                    </li>
                    <li class="offering__terms__list__item">
                        <h3 class="offering__terms__list__item__title">Deadline</h3>
                        <p class="offering__terms__list__item__value">{{ investment_deadline_formatted }}</p>
                    </li>
                </ul>
            </section>
            <section class="offering__description common__centered --grid">
                <h2 class="offering__title-2 --hidden">Description</h2>
                <div class="offering__description__content common__html-content common__grid__item">
                    <h3>Header</h3>
                    <h4>Subheader</h4>
                    <ul>
                        <li>Nunc et, dis dictum posuere id elit commodo pulvinar ut. Integer auctor sed adipiscing nec eu eleifend quis. Sed augue dictum ultrices id sit euismod nunc amet nunc.</li>
                        <li>item</li>
                    </ul>
                    <hr>
                    <img src="#" />
                </div>
            </section>
            <section class="offering__last-chance common__centered --grid">
                <h2 class="offering__last-chance__title offering__title-2 common__grid__item">Sounds Interesting?</h2>
                <div class="offering__last-chance__button common__grid__item">
                  <a href="{{ url }}/invest" class="common__button">Invest now</a>
                </div>
            </section>
            <section class="offering__contacts common__centered">
                <h2 class="offering__title-2">About {{ title }}</h2>
                <ul class="offering__contacts__list">
                    {{#if legal_name}}
                    <li class="offering__contacts__list__item">
                        <h3 class="offering__contacts__list__item__title">Legal Name</h3>
                        <p class="offering__contacts__list__item__value">{{ legal_name }}</p>
                    </li>
                    {{/if}}
                    {{#if founded}}
                    <li class="offering__contacts__list__item">
                        <h3 class="offering__contacts__list__item__title">Founded</h3>
                        <p class="offering__contacts__list__item__value">{{ founded }}</p>
                    </li>
                    {{/if}}
                    {{#if employees}}
                    <li class="offering__contacts__list__item">
                        <h3 class="offering__contacts__list__item__title">Employees</h3>
                        <p class="offering__contacts__list__item__value">{{ employees }}</p>
                    </li>
                    {{/if}}
                    {{#if website_url}}
                    <li class="offering__contacts__list__item">
                        <h3 class="offering__contacts__list__item__title">Website</h3>
                        <p class="offering__contacts__list__item__value">
                            <a href="{{ website_url }}" target="_blank" rel="noopener noreferrer">{{ website_name }}</a>
                        </p>
                    </li>
                    {{/if}}
                    {{#if social}}
                    <li class="offering__contacts__list__item">
                        <h3 class="offering__contacts__list__item__title">Social</h3>
                        <ul class="offering__contacts__list__item__value offering__contacts__list__social-list">
                            {{#if social.facebook }}
                            <li class="offering__contacts__list__social-list__item">
                                <a href="#" class="offering__contacts__list__social-list__item__link --facebook">Facebook</a>
                            </li>
                            {{/if}}
                            {{#if social.instagram }}
                            <li class="offering__contacts__list__social-list__item">
                                <a href="#" class="offering__contacts__list__social-list__item__link --instagram">Instagram</a>
                            </li>
                            {{/if}}
                            {{#if social.twitter }}
                            <li class="offering__contacts__list__social-list__item">
                                <a href="#" class="offering__contacts__list__social-list__item__link --twitter">Twitter</a>
                            </li>
                            {{/if}}
                            {{#if social.linkedin }}
                            <li class="offering__contacts__list__social-list__item">
                                <a href="#" class="offering__contacts__list__social-list__item__link --linkedin">LinkedIn</a>
                            </li>
                            {{/if}}
                            {{#if social.medium }}
                            <li class="offering__contacts__list__social-list__item">
                                <a href="#" class="offering__contacts__list__social-list__item__link --medium">Medium</a>
                            </li>
                            {{/if}}
                            {{#if social.kakaotalk }}
                            <li class="offering__contacts__list__social-list__item">
                                <a href="#" class="offering__contacts__list__social-list__item__link --kakaotalk">KakaoTalk</a>
                            </li>
                            {{/if}}
                            {{#if social.telegram }}
                            <li class="offering__contacts__list__social-list__item">
                                <a href="#" class="offering__contacts__list__social-list__item__link --telegram">Telegram</a>
                            </li>
                            {{/if}}
                            {{#if social.youtube }}
                            <li class="offering__contacts__list__social-list__item">
                                <a href="#" class="offering__contacts__list__social-list__item__link --youtube">YouTube</a>
                            </li>
                            {{/if}}
                        </ul>
                    </li>
                    {{/if}}
                    {{#if location_img}}
                    <li class="offering__contacts__list__item --map">
                        <h3 class="offering__contacts__list__item__title">Location</h3>
                        <p class="offering__contacts__list__item__value">
                            <a href="#" class="offering__contacts__map-link">
                              <img class="offering__contacts__map" src="{{ location_img.url }}" alt="{{ location}}" />
                            </a>
                        </p>
                    </li>
                    {{/if}}
                </ul>
            </section>
        </article>
        <footer class="page__footer">
          {{> partials/footer }}
        </footer>
    </div>
{{/layouts/default}}
