{
  "routes": [
    {
      "method": "GET",
      "path": "/",
      "handler": "Pages.noop",
      "config": {
        "policies": [
          "withValidLanguage"
        ]
      }
    },
    {
      "method": "GET",
      "path": "/:lang(en|ar)",
      "handler": "Pages.list",
      "config": {
        "policies": [
          "withValidLanguage"
        ]
      }
    },
    {
      "method": "GET",
      "path": "/:lang(en|ar)/about",
      "handler": "Pages.about",
      "config": {
        "policies": [
          "withValidLanguage"
        ]
      }
    },
    {
      "method": "GET",
      "path": "/:lang(en|ar)/companies/:slug",
      "handler": "Pages.company",
      "config": {
        "policies": [
          "withValidLanguage"
        ]
      }
    },
    {
      "method": "GET",
      "path": "/:lang(en|ar)/companies/:slug/offerings/:id",
      "handler": "Pages.offering",
      "config": {
        "policies": [
          "withValidLanguage"
        ]
      }
    }
  ]
}
