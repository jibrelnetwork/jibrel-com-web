{
  "connection": "default",
  "collectionName": "companies",
  "info": {
    "name": "company",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": [
      "created_at",
      "updated_at"
    ],
    "comment": ""
  },
  "attributes": {
    "status": {
      "enum": [
        "draft",
        "preview",
        "public"
      ],
      "type": "enumeration",
      "default": "draft",
      "private": true
    },
    "slug": {
      "unique": true,
      "required": true,
      "type": "string"
    },
    "title": {
      "required": true,
      "type": "string"
    },
    "preview_bg_img": {
      "model": "file",
      "via": "related",
      "plugin": "upload",
      "required": false
    },
    "preview_bg_color": {
      "maxLength": 7,
      "default": "#000000",
      "required": true,
      "minLength": 7,
      "type": "string"
    },
    "logo_img": {
      "model": "file",
      "via": "related",
      "plugin": "upload",
      "required": true
    },
    "logo_bg_color": {
      "maxLength": 7,
      "default": "#ffffff",
      "required": true,
      "minLength": 7,
      "type": "string"
    },
    "hero_img": {
      "model": "file",
      "via": "related",
      "plugin": "upload",
      "required": false
    },
    "hero_video_url": {
      "type": "string"
    },
    "legal_name": {
      "type": "string"
    },
    "founded": {
      "type": "string"
    },
    "employees": {
      "type": "integer"
    },
    "website_url": {
      "type": "string"
    },
    "location": {
      "type": "string"
    },
    "location_googlemaps_id": {
      "type": "string"
    },
    "translations": {
      "type": "component",
      "repeatable": true,
      "component": "company.translation"
    },
    "social": {
      "type": "component",
      "repeatable": true,
      "component": "company.social-link"
    }
  }
}
